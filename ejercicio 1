#include <iostream>
#include <string>
#include <algorithm>
using namespace std;

string AMayuscula(string);

int main() {
    string texto;
    cout << "Ingrese texto: ";
    getline(cin, texto);

    cout << AMayuscula(texto) << endl;
    return 0;
}
string AMayuscula(string s) {
    transform(s.begin(), s.end(), s.begin(), ::toupper);
    return s;
}
