#include <iostream>
#include <string>
using namespace std;

int VocalesJuntas(string);

int main() {
    string texto;
    cout << "Ingrese texto: ";
    getline(cin, texto);

    cout << VocalesJuntas(texto) << " vocales juntas" << endl;
    return 0;
}

int VocalesJuntas(string s) {
    string vocales = "aeiouAEIOU";
    int cont = 0;

    for (int i = 0; i < s.size() - 1; i++)
        if (vocales.find(s[i]) != string::npos &&
            vocales.find(s[i+1]) != string::npos)
            cont++;

    return cont;
}
