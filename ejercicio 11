#include <iostream>
#include <string>
using namespace std;

string SubCadena(string, int, int);

int main() {
    string texto;
    int p, n;

    cout << "Cadena: ";
    getline(cin, texto);
    cout << "Posicion: ";
    cin >> p;
    cout << "Longitud: ";
    cin >> n;

    cout << SubCadena(texto, p, n) << endl;
    return 0;
}

string SubCadena(string s, int p, int n) {
    return s.substr(p, n);
}
